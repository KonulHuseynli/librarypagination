@using UniversityProject.ViewModels.Account
@model AccountLoginViewModel

@{
    var returnurl = Context.Request.Query["returnUrl"];
}


<!DOCTYPE html>
<html lang="en">

<head>
 
    <link rel="stylesheet" href="~/uniproject/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <header>
        <div class="container">
            <div id="banner">
                <div class="logo">
                    <img src="~/uniproject/images/logo.png.png" alt="" />
                </div>
                <div class="search">
                    <input type="text" placeholder="Axtar..." />
                    <i class="fa-solid fa-magnifying-glass-plus"></i>
                </div>
                <div class="button">
                    <div class="icon">
                        <i class="fa-solid fa-user"></i>
                        <a asp-action="login" asp-controller="account"> <span>Daxil Ol</span></a>
                    </div>
                    <div class="icon">
                        <i class="fa-solid fa-cart-shopping"></i>
                        <span>Səbət</span>
                    </div>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    @* <div>
                <h6>@User.Identity.Name</h6>
                </div>*@
                    <div>
                        <a asp-action="logout" asp-controller="account"><h6>Logout</h6></a>
                    </div>
                }
            </div>
            <nav>
                <div>MENU</div>
                <ul>
                    <li><a asp-action="index" asp-controller="home">Home</a></li>
                    <li><a asp-action="index" asp-controller="shop">Shop</a></li>
                    <li><a asp-action="index" asp-controller="product">Product</a></li>
                    <li><a asp-action="index" asp-controller="blog">Blog</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <form asp-action="login" asp-controller="account" class="mx-1 mx-md-4">
    <input asp-for="ReturnUrl" type="hidden" value="@returnurl"/>
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign in</p>



                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Email" type="email" id="form3Example3c" class="form-control" />
                                            <label class="form-label" asp-for="Email">Email</label>
                                                <span asp-validation-for="Email"></span>

                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Password" type="password" id="form3Example4c" class="form-control" />
                                            <label asp-for="Password" class="form-label" for="form3Example4c">Password</label>
                                                <span asp-validation-for="Password"></span>

                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Sign in</button>
                                    </div>

                                        <div>
                                            Dont have account? <a asp-action="register" asp-controller="account">Register</a>
                                        </div>
                             

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="~/signin-image.png"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</form>


</body> 
</html>