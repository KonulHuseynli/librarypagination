@using UniversityProject.Areas.Admin.ViewModels.Shop
@model ShopDetailsViewModel
<div class="col-lg-12 grid-margin ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Shop Details</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Datetime</th>
                            <th>mainPhoto</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Id</td>
                            <td>@Model.Title</td>
                            <td>@Html.Raw(Model.Description)</td>
                            <td>@Model.CreateDate.ToString("dd/MM/yyyy")</td>
                           <td><img  src="~/assets/img/@Model.MainPhotoName" /></td>
                        </tr>
                    </tbody>
                </table>
                <a asp-action="index" asp-controller="shop" class="btn btn-info">Cancel</a>
            </div>
        </div>
    </div>
</div>